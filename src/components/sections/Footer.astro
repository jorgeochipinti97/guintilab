<style>
	footer {
		width: 100vw;
		--footer-color: var(--theme-on-primary);
		min-height: 10vh;
		background-color: var(--footer-bg);
		color: var(--footer-color);
		border-top-left-radius: var(--theme-shape-radius);
		border-top-right-radius: var(--theme-shape-radius);
	}
	.footer-grid__container {
		padding: 10vh 0 1rem 0;
		display: grid;
		grid-template-columns: 2fr 1fr 1fr 1fr;
	}
	.footer-socials__list {
		margin: 1rem 0;
		padding: 0;
		display: flex;
		list-style: none;
	}
	.footer-socials__item {
		margin-right: 0.5rem;
	}
	.footer-link__list {
		margin: 0;
		padding: 0;
		list-style: none;
	}
	.footer-link__list li {
		margin-bottom: 0.5rem;
	}
	.footer-link__list li a {
		text-decoration: none;
	}
	.footer-link__list li a:hover {
		opacity: 0.84;
	}
	.footer-copyright__container {
		display: flex;
		flex-direction: column;
		/* justify-content: space-between; */
	}
	.footer-copyright__container p {
		font-size: var(--font-size-sm);
	}
	@media (max-width: 768px) {
		.footer-grid__container :first-child {
			grid-column: 1/-1;
		}
		.footer-grid__container {
			padding: 5vh 0;
			grid-template-columns: repeat(2, 1fr);
			gap: 1rem;
		}
	}
	@media (max-width: 600px) {
		.footer-grid__container {
			padding: 5vh 0;
			grid-template-columns: 1fr;
			gap: 1rem;
		}
		.footer-copyright__container {
			flex-direction: column;
		}
	}

	:root {
		--facebook: #3b5998;
		--instagram: radial-gradient(
			circle at 30% 107%,
			#fdf497 0%,
			#fdf497 5%,
			#fd5949 45%,
			#d6249f 60%,
			#285aeb 90%
		);
		--youtube: #ff0000;
		--x: #333;
		--linkedin: #0072b1;
		--whatsapp: #25d366;
	}
	.icons .icon {
		width: 60px;
		height: 60px;
		display: flex;
		justify-content: center;
		align-items: center;
		border: 2px solid white;
		border-radius: 50%;
		transition: background-color 300ms, border-width 300ms;
	}

	.icons .icon svg {
		transition: transform 300ms;
	}

	.icons .facebook {
		--color: var(--facebook);
	}

	.icons .instagram {
		--color: var(--instagram);
	}

	.icons .youtube {
		--color: var(--youtube);
	}

	.icons .x {
		--color: var(--x);
	}

	.icons .linkedin {
		--color: var(--linkedin);
	}
	.icons .whatsapp {
		--color: var(--whatsapp);
	}

	.icons .icon:hover {
		background: var(--color);
		border-width: 1px;
	}

	.icons .icon:hover svg {
		transform: scale(1.4);
	}
</style>
