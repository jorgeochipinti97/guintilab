---
import { Icon } from 'astro-icon';
import { Container, Button } from '@littlesticks/odyssey-theme-components';
import settings from '../../../config/settings.js';
import {ThemeSwitcher} from '../../theme-switcher/theme-switcher';
---

<Container>
	<section class="hero-section__section">
		<div class="hero-section__text">
				<h1 class="hero-section__text_title" >Web Design and Development Agency</h1>
				<div class="border-t-2  mt-2 w-fit " style="border-color: --theme-primary;">
					<p style="font-size:30px; font-weight:bold ">
Miami, FL
					</p>
				</div>
				<p style="font-size:20px" class="mt-5">
					Need a website? We've got you covered!
				</p>
				<div class="hero-btns__container mt-1">
					<Button href="https://wa.link/udn915" customIcon
						>Let's get started!
            <Fragment slot="icon">
              <Icon name="ic:baseline-chevron-right"/>
            </Fragment>
            </Button
					>
				</div>
				<div style="margin-top:50px">
					<p>
						Our selection palettes:
					</p>
				</div>
				{settings.enableThemeSwitcher && <ThemeSwitcher client:load/>}
			</div>
		<div class="hero-section__image">
				<picture>
					<img
						src="/assets/images/home/classic-hero.jpg"
						alt="Astro Odyssey"
						id="home-hero-image"
					/>
				</picture>
		</div>
	</section>
	<script type="module">
  export const detectarIdioma = () => {
	const idiomaGuardado = window.localStorage.getItem('language');
	if (idiomaGuardado) {
	  return idiomaGuardado;
	} else {
	  const idiomaNavegador = navigator.language ;
	  return idiomaNavegador.startsWith('es') ? 'es' : 'en';
	}
  };
		const idioma = detectarIdioma();
		const textos = {
		  es: {
			encabezado: 'Hola mundo',
			parrafo: 'Este es un párrafo en español.'
		  },
		  en: {
			encabezado: 'Hello world',
			parrafo: 'This is a paragraph in English.'
		  }
		};
	  
		document.getElementById('miEncabezado').innerText = textos[idioma].encabezado;
		document.getElementById('miParrafo').innerText = textos[idioma].parrafo;
	  </script>
</Container>

<style>
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 1rem;
	}
	.hero-section__text {
		justify-self: center;
		max-width: 25rem;

	}
	.hero-section__text_title {
		justify-self: center;
		max-width: 25rem;
		font-size: 50px;
	}

	.hero-btns__container {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.hero-btns__container {
		margin-right: 1rem;
	}
	.hero-section__image {
		display: flex;
	}
	.hero-section__image img {
		width: 100%;
		height: 100%;
		max-height: 80vh;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
	}
	@media (max-width: 768px) {
		.hero-section__section {
			grid-template-columns: 1fr;
		}
	}
</style>
